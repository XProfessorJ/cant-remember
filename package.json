{
  "name": "cant-remember",
  "version": "1.0.0",
  "description": "基于艾宾浩斯遗忘曲线&SM-2间隔重复算法的智能学习工具,真的记不住鸭!!!",
  "author": "Jimmy Xu",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node scripts/remove-crossorigin.cjs",
    "build:electron": "npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build:electron && electron-builder",
    "electron:build:mac": "npm run build:electron && node scripts/hide-index-html.cjs && electron-builder --mac && node scripts/restore-index-html.cjs",
    "electron:build:win": "npm run build:electron && electron-builder --win",
    "electron:build:linux": "npm run build:electron && electron-builder --linux",
    "electron-pack": "electron-builder",
    "build-electron": "npm run build && electron-builder",
    "electron:test": "npm run build && NODE_ENV=production electron .",
    "electron:preview": "npm run build && NODE_ENV=production electron ."
  },
  "dependencies": {
    "dexie": "^3.2.4",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron/asar": "^4.0.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.3.3",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^8.0.1"
  }
}
